<body>

  <div class="slider">
    <div class="slides" id="slides">
      <img src="https://via.placeholder.com/800x400/ff7f7f/333?text=Slide+1" alt="Slide 1" />
      <img src="https://via.placeholder.com/800x400/7fbfff/333?text=Slide+2" alt="Slide 2" />
      <img src="https://via.placeholder.com/800x400/7fff7f/333?text=Slide+3" alt="Slide 3" />
    </div>
    <div class="navigation">
      <button id="prevBtn">&#10094; Prev</button>
      <button id="nextBtn">Next &#10095;</button>
    </div>
  </div>

  <script>
    const slides = document.getElementById("slides");
    const totalSlides = slides.children.length;
    let index = 0;

    function showSlide(i) {
      index = (i + totalSlides) % totalSlides; // wrap around
      slides.style.transform = `translateX(-${index * 100}%)`;
    }

    document.getElementById("nextBtn").addEventListener("click", () => {
      showSlide(index + 1);
    });

    document.getElementById("prevBtn").addEventListener("click", () => {
      showSlide(index - 1);
    });

    // Optional: Auto-play every 4 seconds
    setInterval(() => {
      showSlide(index + 1);
    }, 4000);

    // Initialize
    showSlide(index);
  </script>

</body>
</html>
